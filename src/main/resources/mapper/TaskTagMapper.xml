<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.geun.oss.dowoomi.domain.task.tag.TaskTagRepository">

    <resultMap id="TaskTagResultMap" type="kr.geun.oss.dowoomi.domain.task.tag.TaskTagEntity">
        <result property="taskId" column="task_id"/>
        <result property="tagId" column="tag_id"/>
    </resultMap>

    <select id="findByTaskId" resultMap="TaskTagResultMap">
        SELECT * FROM task_tags WHERE task_id = #{taskId}
    </select>

    <insert id="insert" parameterType="kr.geun.oss.dowoomi.domain.task.tag.TaskTagEntity">
        INSERT INTO task_tags (task_id, tag_id)
        VALUES (#{taskId}, #{tagId})
    </insert>

    <delete id="deleteByTaskId">
        DELETE FROM task_tags WHERE task_id = #{taskId}
    </delete>

    <delete id="deleteByTaskIdAndTagId">
        DELETE FROM task_tags WHERE task_id = #{taskId} AND tag_id = #{tagId}
    </delete>

    <select id="existsByTaskIdAndTagId" resultType="boolean">
        SELECT COUNT(*) > 0 FROM task_tags WHERE task_id = #{taskId} AND tag_id = #{tagId}
    </select>

    <select id="findTagIdsByTaskId" resultType="long">
        SELECT tag_id FROM task_tags WHERE task_id = #{taskId}
    </select>

</mapper>
