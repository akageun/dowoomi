<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.geun.oss.dowoomi.domain.task.dependency.TaskDependencyRepository">

    <resultMap id="TaskDependencyResultMap" type="kr.geun.oss.dowoomi.domain.task.dependency.TaskDependencyEntity">
        <result property="taskId" column="task_id"/>
        <result property="dependencyTaskId" column="dependency_task_id"/>
    </resultMap>

    <select id="findByTaskId" resultMap="TaskDependencyResultMap">
        SELECT * FROM task_dependencies WHERE task_id = #{taskId}
    </select>

    <insert id="insert" parameterType="kr.geun.oss.dowoomi.domain.task.dependency.TaskDependencyEntity">
        INSERT INTO task_dependencies (task_id, dependency_task_id)
        VALUES (#{taskId}, #{dependencyTaskId})
    </insert>

    <delete id="deleteByTaskId">
        DELETE FROM task_dependencies WHERE task_id = #{taskId}
    </delete>

    <delete id="deleteByTaskIdAndDependencyTaskId">
        DELETE FROM task_dependencies WHERE task_id = #{taskId} AND dependency_task_id = #{dependencyTaskId}
    </delete>

    <select id="existsByTaskIdAndDependencyTaskId" resultType="boolean">
        SELECT COUNT(*) > 0 FROM task_dependencies WHERE task_id = #{taskId} AND dependency_task_id = #{dependencyTaskId}
    </select>

    <select id="findDependencyTaskIdsByTaskId" resultType="long">
        SELECT dependency_task_id FROM task_dependencies WHERE task_id = #{taskId}
    </select>

</mapper>
