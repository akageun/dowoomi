<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.geun.oss.dowoomi.domain.task.parent.TaskParentRepository">

    <resultMap id="TaskParentResultMap" type="kr.geun.oss.dowoomi.domain.task.parent.TaskParentEntity">
        <result property="taskId" column="task_id"/>
        <result property="parentTaskId" column="parent_task_id"/>
    </resultMap>

    <select id="findByTaskId" resultMap="TaskParentResultMap">
        SELECT * FROM task_parents WHERE task_id = #{taskId}
    </select>

    <select id="findFirstByTaskId" resultMap="TaskParentResultMap">
        SELECT * FROM task_parents WHERE task_id = #{taskId} LIMIT 1
    </select>

    <insert id="insert" parameterType="kr.geun.oss.dowoomi.domain.task.parent.TaskParentEntity">
        INSERT INTO task_parents (task_id, parent_task_id)
        VALUES (#{taskId}, #{parentTaskId})
    </insert>

    <delete id="deleteByTaskId">
        DELETE FROM task_parents WHERE task_id = #{taskId}
    </delete>

    <delete id="deleteByTaskIdAndParentTaskId">
        DELETE FROM task_parents WHERE task_id = #{taskId} AND parent_task_id = #{parentTaskId}
    </delete>

    <select id="existsByTaskIdAndParentTaskId" resultType="boolean">
        SELECT COUNT(*) > 0 FROM task_parents WHERE task_id = #{taskId} AND parent_task_id = #{parentTaskId}
    </select>

    <select id="findParentTaskIdsByTaskId" resultType="long">
        SELECT parent_task_id FROM task_parents WHERE task_id = #{taskId}
    </select>

</mapper>
