<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.geun.oss.dowoomi.domain.task.assignee.TaskAssigneeRepository">

    <resultMap id="TaskAssigneeResultMap" type="kr.geun.oss.dowoomi.domain.task.assignee.TaskAssigneeEntity">
        <result property="taskId" column="task_id"/>
        <result property="memberId" column="member_id"/>
    </resultMap>

    <select id="findByTaskId" resultMap="TaskAssigneeResultMap">
        SELECT * FROM task_assignees WHERE task_id = #{taskId}
    </select>

    <insert id="insert" parameterType="kr.geun.oss.dowoomi.domain.task.assignee.TaskAssigneeEntity">
        INSERT INTO task_assignees (task_id, member_id)
        VALUES (#{taskId}, #{memberId})
    </insert>

    <delete id="deleteByTaskId">
        DELETE FROM task_assignees WHERE task_id = #{taskId}
    </delete>

    <delete id="deleteByTaskIdAndMemberId">
        DELETE FROM task_assignees WHERE task_id = #{taskId} AND member_id = #{memberId}
    </delete>

    <select id="existsByTaskIdAndMemberId" resultType="boolean">
        SELECT COUNT(*) > 0 FROM task_assignees WHERE task_id = #{taskId} AND member_id = #{memberId}
    </select>

    <select id="findMemberIdsByTaskId" resultType="long">
        SELECT member_id FROM task_assignees WHERE task_id = #{taskId}
    </select>

</mapper>
