<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.geun.oss.dowoomi.domain.category.CategoryMapper">

    <resultMap id="CategoryResultMap" type="kr.geun.oss.dowoomi.domain.category.CategoryEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findById" resultMap="CategoryResultMap">
        SELECT * FROM categories WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="CategoryResultMap">
        SELECT * FROM categories ORDER BY name
    </select>

    <select id="findAllByIds" resultMap="CategoryResultMap">
        SELECT * FROM categories WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="existsById" resultType="boolean">
        SELECT COUNT(*) > 0 FROM categories WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="kr.geun.oss.dowoomi.domain.category.CategoryEntity">
        INSERT INTO categories (name, description, created_at, updated_at)
        VALUES (#{name}, #{description}, datetime('now'), datetime('now'))
    </insert>

    <update id="update" parameterType="kr.geun.oss.dowoomi.domain.category.CategoryEntity">
        UPDATE categories SET
            name = #{name},
            description = #{description},
            updated_at = datetime('now')
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM categories WHERE id = #{id}
    </delete>

    <select id="findByName" resultMap="CategoryResultMap">
        SELECT * FROM categories WHERE name = #{name}
    </select>

    <select id="existsByName" resultType="boolean">
        SELECT COUNT(*) > 0 FROM categories WHERE name = #{name}
    </select>

    <select id="findByNameContaining" resultMap="CategoryResultMap">
        SELECT * FROM categories
        WHERE LOWER(name) LIKE '%' || LOWER(#{name}) || '%'
        ORDER BY name
    </select>

    <select id="lastInsertId" resultType="long">
        SELECT last_insert_rowid()
    </select>

</mapper>
